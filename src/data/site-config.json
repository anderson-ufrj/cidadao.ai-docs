{
  "name": "Cidadão.AI",
  "description": "Hub central de documentação do projeto Cidadão.AI - Sistema multi-agente de IA para transparência pública",
  "version": "1.0.0",
  "author": "Anderson Henrique",
  "architecture": "Enhanced Modular System",
  
  "components": {
    "header": {
      "name": "Header Navigation",
      "description": "Main navigation with theme/language controls",
      "dependencies": ["responsive-header.css"]
    },
    "hero": {
      "name": "Hero Section", 
      "description": "Main banner with project introduction",
      "dependencies": []
    },
    "carousel": {
      "name": "Agents Carousel",
      "description": "Interactive carousel showcasing AI agents",
      "dependencies": ["carousel.css", "carousel.js"]
    },
    "repositories": {
      "name": "Repositories Grid",
      "description": "Grid of project repositories with icons",
      "dependencies": []
    },
    "links": {
      "name": "Important Links",
      "description": "Grid of important project links",
      "dependencies": []
    },
    "api-docs": {
      "name": "API Documentation",
      "description": "Embedded API documentation iframe",
      "dependencies": []
    },
    "modals": {
      "name": "Modal System",
      "description": "About, Manifesto and System modals",
      "dependencies": ["script.js", "floating-button.js"]
    }
  },

  "features": {
    "responsive": true,
    "internationalization": ["pt-BR", "en-US"],
    "themes": ["light", "dark"],
    "accessibility": "ARIA compliant",
    "performance": "Optimized loading"
  },

  "build": {
    "target": "build/",
    "preserveOriginal": true,
    "componentCache": true,
    "hotReload": true
  },

  "development": {
    "devHelpers": true,
    "componentInspector": true,
    "performanceMonitor": true
  }
}